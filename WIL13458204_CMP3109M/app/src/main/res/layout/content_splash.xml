<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_splash"
    tools:context="com.example.daniel.wil13458204_mobilecomputing.Splash"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SplashTitle"
        android:id="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textSize="40dp"
        android:textColor="@color/colorText"/>

    <!-- IMAGES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv1"
                android:layout_below="@+id/tvTitle"
                android:background="@drawable/beef_wellington"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv2"
                android:layout_alignTop="@+id/imageView1"
                android:background="@drawable/chinese" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv3"
                android:layout_alignTop="@+id/imageView1"
                android:background="@drawable/cake"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv4"
                android:layout_below="@+id/tvTitle"
                android:background="@drawable/goatscheesecannellon"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv5"
                android:layout_alignTop="@+id/imageView1"
                android:background="@drawable/cottage_pie"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv6"
                android:layout_alignTop="@+id/imageView1"
                android:background="@drawable/steak"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SplashFooter"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvStatement"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorText"/>

</LinearLayout>
